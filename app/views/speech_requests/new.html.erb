<%= form_with model: @speech_request, local: true do |form| %>
  <div>
    <%= form.label :name, "Name of the Deceased" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :relation, "Your Relation to the Deceased" %>
    <%= form.text_field :relation %>
  </div>

  <div>
    <%= form.label :memories, "Share a few memories or key details" %>
    <%= form.text_area :memories %>
  </div>

  <div>
    <%= form.submit "Generate Speech" %>
  </div>
<% end %>
